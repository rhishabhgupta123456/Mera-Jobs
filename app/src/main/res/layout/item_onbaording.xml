<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_18sdp"
        android:scaleType="fitXY"
        android:src="@drawable/onborad_pic1" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="The Fastest Way to Find Your Dream Job"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:id="@+id/tvItemDescription"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:fontFamily="@font/normal"
        android:gravity="center"
        android:text="How can social media job posts help your recruitment process? We can name several ways, including reaching a broader spectrum.."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

</LinearLayout>